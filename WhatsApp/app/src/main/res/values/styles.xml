<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="H1">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SettingsText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NotificationsTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="toolbarText" parent="H1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionModeBackground">@color/teal_green</item>
    </style>

    <style name="MenuTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="SelectableListItemStyle">
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>
</resources>